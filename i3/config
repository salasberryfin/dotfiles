exec --no-startup-id /usr/bin/xrandr --output DVI-I-1-1 --auto --left-of DVI-I-2-2 &
exec --no-startup-id /usr/bin/xrandr --output DVI-I-2-2 --rotate right &
exec --no-startup-id /usr/bin/xrandr --output DVI-I-2-2 --primary &
